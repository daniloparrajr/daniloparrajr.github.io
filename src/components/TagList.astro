---
// utils imports
import { slugify } from "../js/utils";

const { tags, classes } = Astro.props;
---

<ul class:list={["flex gap-3 leading-none", classes]}>
  {
    tags.map((tag) => (
      <li>
        <a href={`/tag/${slugify(tag)}/`} class="badge" rel="prefetch-intent">
          {tag}
        </a>
      </li>
    ))
  }
</ul>
