---
// Google fonts imports
import "@fontsource-variable/inter";
import "@fontsource/ibm-plex-mono/400.css";

import "../styles/base.css";

// components import
import MainHead from "@components/MainHead.astro";
import Header from "@components/MainHeader.astro";
import Footer from "@components/MainFooter.astro";
import SearchModal from "@components/SearchModal.astro";

const { title, description, type, ogImage, name } = Astro.props;
---

<html lang="en-US">
  <MainHead {title} {description} {type} {ogImage} {name} />
  <body class="font-sans" data-barba="wrapper">
    <div class="container flex flex-col min-h-screen">
      <Header activeNav={name} />
      <main data-barba="container" id={name} data-barba-namespace={name}>
        <slot />
      </main>
      <Footer />
    </div>
    <SearchModal />
    <script src="../scripts/siteTransition.ts"></script>
  </body>
</html>
