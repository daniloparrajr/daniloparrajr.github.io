---
import { SITE } from "@config";

// Astro imports
import { getCollection } from "astro:content";

// Layout imports
import MainLayout from "@layouts/MainLayout.astro";

// Component imports
import TagList from "@components/TagList.astro";
import PostMeta from "@components/PostMeta.astro";

// Utils imports
import { filterPosts, slugify } from "@utils/posts";

export async function getStaticPaths() {
  const allPosts = await getCollection("blog");
  const formattedPosts = filterPosts(allPosts);

  return formattedPosts.map((post) => ({
    params: { slug: post.slug },
    props: {
      post,
    },
  }));
}

const { post } = Astro.props;

const { title, description, date, tags } = post.data;
const ogImage = `${SITE.website}/og-images/${post.slug}.png`;

const { Content } = await post.render();
---

<MainLayout {title} {description} {ogImage} name="article" type="article">
  <article data-pagefind-body>
    <header class="mb-10">
      <TagList classes="mb-8 sm:mb-10" {tags} />

      <h1 class="text-3xl sm:text-4xl font-bold">{title}</h1>

      <PostMeta
        classes="mt-8 sm:mb-10"
        content={post.body}
        {date}
        fontSize="text-sm"
      />
    </header>

    <div class="prose dark:prose-invert js-animate-content">
      <Content />
    </div>
  </article>
</MainLayout>
